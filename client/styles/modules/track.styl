.track
    display flex
    flex-wrap: nowrap
    background #fff
    margin-bottom 12px
    border 1px solid #EEEEEE
    &ArtWork
        display inline-block
        vertical-align: top
        width 100px
        height 100px
        position: relative
        button
            display block
            position absolute
            padding 0
            margin 0
            width 100px
            height 100px
            top 0
            left 0px
            background none
            border none
            line-height 100px
            img
                display inline-block
                vertical-align: middle
                line-height: 1
            &:hover
            &:focus
                :global
                    .fa
                        color $mainColor
                        text-shadow 0 2px 5px rgba(0,0,0,.5)
                        background none
            :global
                .fa
                    display block
                    position: absolute
                    top 0
                    left 0
                    line-height: 100px
                    width 100%
                    height 100%
                    text-align: center
                    font-size 3em
                    color #EC407A
                    text-shadow 0 2px 5px rgba(0,0,0,.26)
                    background rgba(255,255,255,.42)
                    &:before
                        content "\F04B"
    &Active
        border-color #BDBDBD
        .trackArtWork
            :global
                .fa
                    background none
                    &:before
                        content "\F04C"
    &Details
        display inline-block
        vertical-align: top
        width calc(100% - 100px)
        padding 12px
        &Title
            display block
            font-size 1.1em
            color #212121
            line-height 30px
        &Artist
            display block
            font-size 1em
            color #424242
            line-height 28px
        &Genre
            display block
            font-size .86em
            color #616161
            line-height 20px